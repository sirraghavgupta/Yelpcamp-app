<%- include("partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h2>Welcome to Yelpcamp!</h2>
			<p>View our handpicked campgrounds from all over the world.</p>
			<p>
			 <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campgrounds</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(item){ %>
		<div class="col-lg-3 col-md-6 col-sm-3">
			<div class="thumbnail">
				<img src=" <%=item.image%> " >
				<div class="caption">
					<h4><%= item.name %></h4>
				</div>
				<p>
					<a href="/campgrounds/<%= item._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>
		<% }); %>
	</div>
</div>

<%- include("partials/footer") %>